<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MasterPagePanchenko.Views.SkillsPage">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center" Margin="20">
            <Image x:Name="profileImage"></Image>
            <Label Text="Gigabyte" Font="20" TextColor="Orange" HorizontalTextAlignment="Center"></Label>
            <Label Text="Выбери модель видеокарты"
                   TextColor="Black" HorizontalTextAlignment="Center"></Label>
            <Picker x:Name="modelGigabyte" SelectedIndexChanged="modelGigabyte_SelectedIndexChanged">
                <Picker.Items>
                    <x:String>GTX 1080 Ti</x:String>
                    <x:String>RTX 2080 Ti</x:String>
                    <x:String>RTX 3080 Ti</x:String>
                    <x:String>RTX 3090 Ti</x:String>
                </Picker.Items>
            </Picker>
            <Label x:Name="choosen" Text=""
                   TextColor="Black" HorizontalTextAlignment="Center"></Label>
            <Image x:Name="imgchoosen" Source=""></Image>
            <Button x:Name="link" Text="Более подробная информация о производителе" Clicked="link_Clicked" TextColor="#000000" TextTransform="Default" Visual="Material"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>